{
	"name": "@rob.hameetman/type-guards",
	"version": "1.0.0-alpha.4",
	"description": "Eslint plugin for TypeScript projects",
	"author": "Robert H. Hameetman <engineering@robhameetman.com>",
	"homepage": "https://www.robhameetman.com/",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.min.js",
	"module": "./dist/index.min.js",
	"typings": "./dist/index.d.ts",
	"keywords": [
		"typescript",
		"ts",
		"types",
		"type guards"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/RobHameetman/packages.git",
		"directory": "packages/type-guards"
	},
	"bugs": {
		"url": "https://github.com/RobHameetman/packages/issues"
	},
	"files": [
		"dist/*"
	],
	"scripts": {
		"build": "rm -rf ./dist/ && rollup -c ./config/rollup.config.js",
		"lint": "eslint ./lib/* --ext=ts --fix",
		"prepublish": "(npm run build && npm test) || exit 1",
		"start": "rollup -c ./config/rollup.config.js -w",
		"test": "NODE_ENV=test jest"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.0.2",
		"@rollup/plugin-commonjs": "^25.0.3",
		"@rollup/plugin-node-resolve": "^15.1.0",
		"@rollup/plugin-typescript": "^11.1.2",
		"@types/jest": "^29.5.3",
		"jest": "^29.6.2",
		"rollup": "^2.79.1",
		"rollup-plugin-terser": "^7.0.2",
		"ts-jest": "^29.1.1",
		"typescript": "^5.1.6"
	},
	"eslintConfig": {
		"extends": [
			"./index.js"
		],
		"rules": {
			"import/export": "off",
			"sort-imports": "off",
			"sort-keys": "off"
		}
	},
	"eslintIgnore": [
		"dist"
	],
	"prettier": {
		"semi": true,
		"trailingComma": "all",
		"singleQuote": true,
		"printWidth": 80,
		"tabWidth": 2
	},
	"jest": {
		"roots": [
			"<rootDir>/lib"
		],
		"collectCoverageFrom": [
			"lib/**/*.ts",
			"!lib/**/*.d.ts"
		],
		"coverageReporters": [
			"text-summary"
		],
		"moduleFileExtensions": [
			"js",
			"ts",
			"json"
		],
		"moduleNameMapper": {
			"^@core/(.*)$": "<rootDir>/lib/js/core/$1",
			"^@specialized/(.*)$": "<rootDir>/lib/js/specialized/$1"
		},
		"preset": "ts-jest",
		"reporters": [
			"default"
		],
		"testMatch": [
			"<rootDir>/lib/**/*.spec.ts"
		],
		"transform": {
			"^.+\\.ts?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"[/\\\\]node_modules[/\\\\].+\\.(js|ts)$"
		]
	}
}
